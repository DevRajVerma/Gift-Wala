    <style>
      /* Reset some default styles */
      body,
      h1,
      h2,
      ul,
      p,
      table {
        margin: 0;
        padding: 0;
      }

      /* Set the base font size for responsiveness */
      html {
        font-size: 16px;
      }

      /* Basic styling for the header */
      /* header {
    background: linear-gradient(to right, #cf268a, #6b0772);
    color: #fff;
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
} */

      header h1 {
        font-size: 2rem;
      }

      header a {
        color: #fff;
        text-decoration: none;
        font-weight: bold;
      }

      /* Main content container */
      section {
        margin: 1rem 2rem;
        padding: 1.5rem;
        border: 1px solid #ddd;
        background-color: #f9f9f9;
      }

      /* Styling for personal information section */
      .user-info {
        background-color: #fff;
        padding: 1rem;
      }

      .user-info p {
        margin-bottom: 1rem;
      }

      /* Styling for shipping addresses section */
      .shipping-addresses ul {
        list-style: none;
      }

      .shipping-addresses li {
        margin-bottom: 1rem;
      }

      /* Styling for order history table */
      .order-history table {
        width: 100%;
        border-collapse: collapse;
      }

      .order-history th,
      .order-history td {
        border: 1px solid #ddd;
        padding: 1rem;
        text-align: left;
      }

      .order-history th {
        background-color: #333;
        /* background: linear-gradient(to right, #242323, #686363); */
        color: #fff;
      }

      /* Styling for coupons section */
      .coupons ul {
        list-style: disc;
        margin-left: 2rem;
        padding-left: 1rem;
      }

      /* Styling for footer */
      footer {
        text-align: center;
        /* background: linear-gradient(to right, #cf268a, #6b0772); */
        color: #fff;
        padding: 1rem 0;
      }

      /* Media query for responsiveness */
      @media (max-width: 768px) {
        header {
          flex-direction: column;
          text-align: center;
        }

        header h1 {
          margin-bottom: 1rem;
        }
      }
    </style>
