    <style>
      :root {
        --primary: #cf268a;
        --primary-light: #e83e8c;
        --secondary: #6c757d;
        --light: #f8f9fa;
        --dark: #343a40;
        --white: #ffffff;
        --gray-100: #f8f9fa;
        --gray-200: #e9ecef;
        --gray-300: #dee2e6;
        --gray-400: #ced4da;
        --gray-500: #adb5bd;
        --gray-600: #6c757d;
        --gray-700: #495057;
        --gray-800: #343a40;
        --gray-900: #212529;
      }

      body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
        color: var(--gray-800);
        line-height: 1.6;
      }

      .about-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }

      .about-header {
        text-align: center;
        padding: 40px 0;
        position: relative;
      }

      .about-header h1 {
        color: var(--gray-800);
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        position: relative;
        display: inline-block;
      }

      .about-header h1::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(to right, var(--gray-500), var(--gray-700));
        border-radius: 2px;
      }

      .about-intro {
        text-align: center;
        max-width: 800px;
        margin: 0 auto 40px;
        padding: 0 20px;
      }

      .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        margin-bottom: 60px;
      }

      .team-member {
        background-color: var(--white);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
        position: relative;
      }

      .team-member:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
      }

      .profile-image-container {
        position: relative;
        padding-top: 30px;
        margin-bottom: 20px;
      }

      .profile-pictures {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
      }

      .team-member:hover .profile-pictures {
        transform: scale(1.05);
      }

      .member-content {
        padding: 0 30px 30px;
      }

      .member-content h2 {
        color: var(--gray-800);
        font-size: 1.5rem;
        margin: 0 0 5px;
        font-weight: 600;
      }

      .designation {
        color: var(--gray-600);
        font-size: 0.95rem;
        margin-bottom: 20px;
        display: inline-block;
        padding: 5px 15px;
        background-color: var(--gray-100);
        border-radius: 20px;
      }

      .description {
        color: var(--gray-700);
        margin-bottom: 25px;
        font-size: 0.95rem;
        line-height: 1.7;
      }

      .linkedin {
        display: inline-block;
        padding: 10px 25px;
        background-color: var(--gray-700);
        color: var(--white);
        text-decoration: none;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.3s ease;
      }

      .linkedin:hover {
        background-color: var(--gray-800);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      }

      @media (max-width: 768px) {
        .about-header h1 {
          font-size: 2rem;
        }
        
        .team-grid {
          grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
          gap: 20px;
        }
      }

      @media (max-width: 576px) {
        .about-header {
          padding: 30px 0;
        }
        
        .about-header h1 {
          font-size: 1.8rem;
        }
        
        .profile-pictures {
          width: 120px;
          height: 120px;
        }
        
        .member-content {
          padding: 0 20px 25px;
        }
        
        .member-content h2 {
          font-size: 1.3rem;
        }
      }
    </style>
  </head>
